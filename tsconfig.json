{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@agentic/*": ["backend/agentic/*"]
    }
  },
  "include": [
    "backend/**/*",
    "backend/agentic/**/*",
    "models/**/*",
    "types/**/*",
    "test/**/*",
    "frontend/**/*"
  ]
}
